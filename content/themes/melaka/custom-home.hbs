    <!-- Latest Posts section -->
    <h2 class="text-light text-center mb-3">Our Newest Posts</h2>
    <section id="hp-posts" class="container mb-5 text-dark">
        {{#if "posts"}}
            {{#get "posts" limit="3" include="authors"}}
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4 justify-content-center">
                    {{#foreach posts}}
                        {{!-- <div class="col">
                            <div class="card border-light p-0 h-100">
                                <div class="card-header">
                                    <a href="{{url}}" alt="{{meta_title}}"><strong>{{title}}</strong></a>
                                </div>
                                <div class="card-body p-3">
                                    <p class="card-text">{{excerpt}}</p>
                                </div>
                                <div class="card-footer">
                                    <p class="blockquote">
                                        <p class="blockquote-footer my-1">{{authors separator=", "}} &vert; {{date published_at format="MMM Do, YYYY"}}</p>
                                    </p>
                                </div>
                            </div>
                        </div> --}}
                        <div class='js-grid__col o-grid__col--initial-grow o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l js-post-card-wrap c-post-card-wrap text-light'>

                            <div class='c-post-card {{#if feature_image}} c-post-card--with-image {{/if}} {{#unless feature_image}} c-post-card--no-image {{/unless}}'>
                                {{#if feature_image}}
                                <div class='c-post-card__media'>
                                    <a href='{{ url }}' class='c-post-card__image-wrap' aria-hidden='true' tabindex='-1'>
                                    <img
                                        alt='{{ title }}'
                                        class='c-post-card__image lazyload'
                                        data-srcset='
                                        {{ img_url feature_image size='md' }} 380w,
                                        {{ img_url feature_image size='lg' }} 760w,
                                        {{ img_url feature_image size='xl' }} 1520w'
                                        data-src='{{img_url feature_image size='xl'}}'
                                    >
                                    </a>
                                    {{#if featured}}
                                    <span title='{{t 'Featured Post' }}'>
                                        <span class='c-post-card--featured__icon' data-icon='ei-star' data-size='s'></span>
                                    </span>
                                    {{/if}}
                                </div>
                                {{/if}}

                                {{#unless feature_image}}
                                {{#if featured}}
                                    <span title='{{t 'Featured Post' }}'>
                                    <span class='c-post-card--featured__icon' data-icon='ei-star' data-size='s'></span>
                                    </span>
                                {{/if}}
                                {{/unless}}

                                <div class='c-post-card__content {{#unless feature_image}} c-post-card__content--no-image {{/unless}}'>
                                <h2 class='c-post-card__title'>
                                    <a href='{{ url }}' class='c-post-card__title-link'>
                                    {{ title }}
                                    </a>
                                </h2>
                                <div class='c-post-card__meta'>
                                    <div class='c-post-card__author'>{{#primary_author}}<a href='{{ url }}'>{{ name }}</a>{{/primary_author}}</div>
                                    <time class='c-post-card__date' datetime='{{ date format='YYYY-MM-DD' }}' title='{{ date format='DD MMMM YYYY' }}'>{{ date format='DD.MMM.YYYY' }}</time>
                                </div>
                                <hr>
                                <div class="c-post-excerpt">
                                    <p>
                                    {{ excerpt }}
                                    </p>
                                </div>
                                </div>
                            </div>

                            </div>
                    {{/foreach}}
                </div>
            {{else}} 
                <h2 class="text-center">No New Posts To Show!</h2>
            {{/get}}
        {{/if}}
    </section>




