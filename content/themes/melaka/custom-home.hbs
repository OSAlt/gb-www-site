    <!-- "Slider" as Nixie calls it -->
    <section class="container mb-5">
        <div id="departments" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#departments" data-bs-slide-to="0" class="active" aria-current="true" aria-label="slide 1"></button>
                <button type="button" data-bs-target="#departments" data-bs-slide-to="1" aria-label="slide 2"></button>
                <button type="button" data-bs-target="#departments" data-bs-slide-to="2" aria-label="slide 3"></button>
                <button type="button" data-bs-target="#departments" data-bs-slide-to="3" aria-label="slide 4"></button>
            </div>
            <div class="carousel-inner rounded-4">
                <div class="carousel-item active">
                    <img src="{{asset 'img/slides/1.png'}}" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="{{asset 'img/slides/2.png'}}" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="{{asset 'img/slides/3.png'}}" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="{{asset 'img/slides/4.png'}}" class="d-block w-100">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#departments"  data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#departments"  data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
            </div>
    </section>

