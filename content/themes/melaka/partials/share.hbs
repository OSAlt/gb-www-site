<ul class='c-share o-plain-list'>
  <li class='c-share__item'>
    <a class='c-share__link js-share__link--clipboard'
       title="{{t 'Subscribe' }}"
       aria-label="{{t 'Subscribe' }}"
       href='https://anchor.fm/geekbeacon' target="_blank">
      Follow Podcast
    </a>
  </li>

  <li class='c-share__item'>
    <a class='c-share__link'
       title='{{t 'Share on Twitter' }}'
       aria-label='{{t 'Share on Twitter' }}'
       href="https://twitter.com/share?text={{ encode title }}&amp;url={{ url absolute='true' }}"
       onclick="window.open(this.href, 'twitter-share', 'width=550, height=235'); return false;">
      <i class="fab fa-twitter"></i>
    </a>
  </li>

  <li class='c-share__item'>
    <a class='c-share__link'
       title='{{t 'Share on Facebook' }}'
       aria-label='{{t 'Share on Facebook' }}'
       href="https://www.facebook.com/sharer/sharer.php?u={{ url absolute='true' }}"
       onclick="window.open(this.href, 'facebook-share', 'width=580, height=296'); return false;">
      <i class="fab fa-facebook-f"></i>
    </a>
  </li>

  <li class='c-share__item'>
    <a class='c-share__link'
       title='{{t 'Share via Email' }}'
       aria-label='{{t 'Share via Email' }}'
       href="mailto:?subject={{ encode title }}&body={{ url absolute='true' }}">
      <i class="far fa-envelope"></i>
    </a>
  </li>

  <li class='c-share__item'>
    <a class='c-share__link js-share__link--clipboard'
       title="{{t 'Copy link' }}"
       aria-label="{{t 'Copy link' }}"
       href='#'
       data-clipboard-text="{{ url absolute='true' }}"
       onclick='return false;'>
      <i class="fas fa-link"></i>
    </a>
  </li>
</ul>